pipeline {
    agent any
    
    environment {
        PROJECT_ID = 'emporos-473418'
        GAR_LOCATION = 'us-central1'
        SERVICE = 'my-cloud-run-service'
        REGION = 'us-central1'
        IMAGE_NAME = 'emporos-service'
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Build Docker Image') {
            steps {
                script {
                    sh 'docker build -t ${GAR_LOCATION}-docker.pkg.dev/${PROJECT_ID}/my-docker-repo/${IMAGE_NAME}:${BUILD_NUMBER} .'
                }
            }
        }
        
        stage('Push to Artifact Registry') {
            steps {
                withCredentials([string(credentialsId: 'gcp-service-account', variable: 'GCP_KEY')]) {
                    script {
                        sh 'echo "$GCP_KEY" > /tmp/gcp-key.json'
                        sh 'gcloud auth activate-service-account --key-file=/tmp/gcp-key.json'
                        sh 'gcloud auth configure-docker ${GAR_LOCATION}-docker.pkg.dev --quiet'
                        sh 'docker push ${GAR_LOCATION}-docker.pkg.dev/${PROJECT_ID}/my-docker-repo/${IMAGE_NAME}:${BUILD_NUMBER}'
                    }
                }
            }
        }
        
        stage('Deploy to Cloud Run') {
            steps {
                withCredentials([string(credentialsId: 'gcp-service-account', variable: 'GCP_KEY')]) {
                    script {
                        sh 'echo "$GCP_KEY" > /tmp/gcp-key.json'
                        sh 'gcloud auth activate-service-account --key-file=/tmp/gcp-key.json'
                    script {
                        sh '''
                            gcloud run deploy ${SERVICE} \
                            --image ${GAR_LOCATION}-docker.pkg.dev/${PROJECT_ID}/my-docker-repo/${IMAGE_NAME}:${BUILD_NUMBER} \
                            --region ${REGION} \
                            --allow-unauthenticated \
                            --memory 512Mi \
                            --cpu 1
                        '''
                    }
                }
            }
        }
    }
    
    post {
        success {
            echo 'Deployment successful!'
        }
        failure {
            echo 'Deployment failed!'
        }
    }
}
